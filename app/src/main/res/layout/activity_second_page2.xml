<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    tools:context=".second_page">

    <Button
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="356dp"
        android:fontFamily="sans-serif"
        android:text="Genrate Table"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/n_power" />


    <Button
        android:id="@+id/n_power"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="184dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="sans-serif"
        android:text="Sqare of Numbers"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/table"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calculater"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="225dp"
        android:fontFamily="sans-serif"
        android:text="calculater"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table" />

    <EditText
        android:id="@+id/entered_text"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="58dp"
        android:background="#FBF8F8"
        android:ems="10"
        android:focusable="auto"
        android:fontFamily="sans-serif"
        android:hint=" Enter a Number To Porform task"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#090808"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/n_power"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>